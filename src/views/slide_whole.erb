<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <!-- Generated by site developers - begin -->
    <meta name="fowllow_user" content="<%= @user %>">
    <meta name="fowllow_topic" content="<%= @topic %>">
    <meta name="fowllow_endpoint" content="http://fowllow.com/">
    <!-- end -->
    <script type="text/javascript" src="/js/jquery.min.js"></script>
    <script type="text/javascript" src="/js/fowllow.js"></script>
    <script type="text/javascript" src="/js/slidown.js"></script>
    <script type="text/javascript" src="/js/leap.min.js"></script>
    <script type="text/javascript" src="/js/leap_binder.js"></script>
    <% if @meta.enable_mathjax? %>
    <%= %Q{<script type="text/javascript" src="/js/MathJax.js?config=default"></script>} %>
    <% end %>
    <link rel="stylesheet"type="text/css" href="/css/reset.css">
    <link rel="stylesheet" type="text/css" href="/css/<%= @meta.style %>.css">
</head>
<body onload="pageLoaded()">
    <nav id="helpers">
      <button title="Previous slide" id="nav-prev" class="nav-prev">&lt;</button>
      <button title="Jump to a random slide" id="slide-no">1</button>
      <button title="Next slide" id="nav-next" class="nav-next">&gt;</button>
      <menu>
        <button type="checkbox" data-command="toc" title="Table of Contents" class="toc">LIST</button>
        <button type="checkbox" data-command="help" title="View Help">?</button>
      </menu>
    </nav>
    <div id="wrapper">
        <%= node.content %>
    </div>
    <div id="prev_page"></div>
    <div id="preloader">
    </div>
</body>
</html>
